@model NovoCuidar2024.Models.Contrato

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem a certeza que pretende eliminar este contrato?</h3>
<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAssinatura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAssinatura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Motivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ficheiro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ficheiro)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <table>
            <tr>
                <td>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </td>
                <td>
                    <a href="javascript:history.go(-1)" class="btn btn-secondary">Voltar</a>
                </td>
            </tr>
        </table>
    </form>
</div>
