@model NovoCuidar2024.Models.DadosClinicos

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Dados Clínicos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UtenteId" class="control-label">Número de Utente</label>
                <input asp-for="UtenteId" class="form-control" readonly/>
                <span asp-validation-for="UtenteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CentroSaude" class="control-label">Centro de Saúde</label>
                <input asp-for="CentroSaude" class="form-control" />
                <span asp-validation-for="CentroSaude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicoAssistente" class="control-label">Médico Assistente</label>
                <input asp-for="MedicoAssistente" class="form-control" />
                <span asp-validation-for="MedicoAssistente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumUtenteSaúde" class="control-label">Número de Utente de Saúde</label>
                <input asp-for="NumUtenteSaúde" class="form-control" />
                <span asp-validation-for="NumUtenteSaúde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrupoSanguineo" class="control-label">Grupo Sanguíneo</label>
                <input asp-for="GrupoSanguineo" class="form-control" />
                <span asp-validation-for="GrupoSanguineo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alergias" class="control-label"></label>
                <textarea asp-for="Alergias" class="form-control"></textarea>
                <span asp-validation-for="Alergias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestricoesAlimentare" class="control-label">Restrições Alimentares</label>
                <textarea asp-for="RestricoesAlimentare" class="form-control"></textarea>
                <span asp-validation-for="RestricoesAlimentare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patologias" class="control-label"></label>
                <textarea asp-for="Patologias" class="form-control"></textarea>
                <span asp-validation-for="Patologias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InformacoessComplementares" class="control-label">Informações Complementares</label>
                <textarea asp-for="InformacoessComplementares" class="form-control"></textarea>
                <span asp-validation-for="InformacoessComplementares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResumoClinico" class="control-label">Resumo Clínico</label>
                <textarea asp-for="ResumoClinico" class="form-control"></textarea>
                <span asp-validation-for="ResumoClinico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Gravar" class="btn btn-primary" />
                        </td>
                        <td>
                            <a href="javascript:history.go(-1)" class="btn btn-secondary">Voltar</a>
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
