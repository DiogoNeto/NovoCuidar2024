@model NovoCuidar2024.Models.SubSistema

@{
    ViewData["Title"] = "Add";
}

<h1>Criar - Passo 4</h1>

<h4>SubSistemas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UtenteId" class="control-label"></label>
                <input asp-for="UtenteId" class="form-control" />
                <span asp-validation-for="UtenteId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Nome" class="control-label"></label>
                <br />
                <select id="subSistemas" name="subSistemas" onchange="dropdownSubSistemasChanged()">
                    <option value="">Selecione uma opção</option>
                    @foreach (var item in ViewBag.DataSubsistemas)
                    {
                        <option value="@item.Id">@item.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Seguinte" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
