@model NovoCuidar2024.Models.SubSistema

@{
    ViewData["Title"] = "Add";
}

<h1>Criar</h1>

<h4>SubSistemas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UtenteId" class="control-label"></label>
                <input asp-for="UtenteId" class="form-control" />
                <span asp-validation-for="UtenteId" class="text-danger"></span>
            </div>
            <div class="col-md-6"> 
                <label asp-for="Nome" class="control-label"></label>
                <br />
                <select id="nome" name="nome" onchange="dropdownSubSistemaChanged()">
                    <option value="">Selecione uma opção</option>
                    @foreach (var item in ViewBag.DataSubSistemas)
                    {
                        <option value="@item.Nome">@item.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

<script>
    function dropdownSubSistemaChanged(selectElement) {
        // Get the selected value
        var selectedValue = document.getElementById("nome").value;

        console.log("Selected value: " + selectedValue);
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
