@model NovoCuidar2024.Models.Servico

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Serviços</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                @* <label asp-for="UtenteId" class="control-label"></label>
                <input asp-for="UtenteId" class="form-control" /> *@

                <label asp-for="UtenteId" class="control-label"></label>
                <select id="ddlUtenteId">
                    <option value="0">Nenhum</option>
                    @foreach (var item in ViewBag.Data)
                    {
                        <option value="@item.Id">@item.NomePrincipal @item.NomeApelido</option>
                    }
                </select>
                <input asp-for="UtenteId" id="txtUtenteId" class="form-control" hidden />

                <label asp-for="ServicoContratado" class="control-label"></label>
                <input asp-for="ServicoContratado" id="txtServicoContratado" class="form-control" hidden />
            </div>
            @{
                List<SelectListItem> items = new List<SelectListItem>
            {
            new SelectListItem { Text = "Apoio Domiciliário", Value = "1" },
            new SelectListItem { Text = "Medicina", Value = "2" },
            new SelectListItem { Text = "Enfermagem", Value = "3" },
            new SelectListItem { Text = "Fisioterapia", Value = "4" },
            new SelectListItem { Text = "Terapia da Fala", Value = "5" },
            new SelectListItem { Text = "Nutrição", Value = "6" },
            new SelectListItem { Text = "Outros", Value = "7" }
            };


            }
            <select id="dllServicoContratado">
                @foreach (var item in items)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            </select>

            @* <div class="form-group">
            <label asp-for="ServicoContratado" class="control-label"></label>
            <select id="ServicoContratado">
            <option value="Apoio Domiciliário" selected>Apoio Domiciliário</option>
            <option value="1">Medicina</option>
            <option value="2">Enfermagem</option>
            <option value="3">Fisioterapia</option>
            <option value="4">Terapia da Fala</option>
            <option value="5">Nutrição</option>
            <option value="6">Outros</option>
            </select>
            @* <label asp-for="ServicoContratado" class="control-label"></label>
            <input asp-for="ServicoContratado" class="form-control" />
            <span asp-validation-for="ServicoContratado" class="text-danger"></span>
            </div> *@
             <div class="form-group">
            <label asp-for="OrigemContacto" class="control-label"></label>
            <input asp-for="OrigemContacto" class="form-control" />
            <span asp-validation-for="OrigemContacto" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Preco" class="control-label"></label>
            <input asp-for="Preco" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="DataServico" class="control-label"></label>
            <input asp-for="DataServico" class="form-control" type="date" />
            <span asp-validation-for="DataServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    // JavaScript code to handle the change event
    document.getElementById("ddlUtenteId").addEventListener("change", function () {
        var selectedValue = this.value;
        alert(this.value);
        txtUtenteId.value = this.value;
        // Do something with the selected value
        console.log("Selected value: " + selectedValue);
    });

    document.getElementById("dllServicoContratado").addEventListener("change", function () {
        var selectedValue = this.value;
        alert(this.value);
        txtServicoContratado.value = this.value;
        // Do something with the selected value
        console.log("Selected value: " + selectedValue);
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
