@model NovoCuidar2024.Models.ServicoContratado

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ServicoContratado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UtenteId" class="control-label"></label>
                <input asp-for="UtenteId" class="form-control"> Utente</input>
                <span asp-validation-for="UtenteId" class="text-danger">Utente</span>
            </div>
            <div class="form-group">
                <label asp-for="ServicoId" class="control-label"></label>
                <input asp-for="ServicoId" class="form-control">Serviço</input>
                <span asp-validation-for="ServicoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <input asp-for="ContratoId" class="form-control">Contrato</input>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control">Data de Início</input>
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control">Data de Fim</input>
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodicidade" class="control-label"></label>
                <input asp-for="Periodicidade" class="form-control">Periodicidade</input>
                <span asp-validation-for="Periodicidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDia" class="control-label"></label>
                <input asp-for="ValorDia" class="form-control">Valor ao Dia</input>
                <span asp-validation-for="ValorDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorSemana" class="control-label"></label>
                <input asp-for="ValorSemana" class="form-control">Valor à Semana</input>
                <span asp-validation-for="ValorSemana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMes" class="control-label"></label>
                <input asp-for="ValorMes" class="form-control">Valor ao Mês</input>
                <span asp-validation-for="ValorMes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Gravar" class="btn btn-primary" />
                        </td>
                        <td>
                            <a href="javascript:history.go(-1)" class="btn btn-secondary">Voltar</a>
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
